{
    "manifest_version": 2,
    "name": "Skip Netflix intro",
    "permissions": [
        "webNavigation",
        "tabs",
        "<all_urls>",
        "storage"
    ],
    "version": "0.1",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_icon": {
            "19": "icon.png"
        }
    }
}